{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_as7_debug",
            "command": "powershell",
            "args": [
                "${env:UTIL}/util_build_embedded_as7.ps1 debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "build_as7_release",
            "command": "powershell",
            "args": [
                "${env:UTIL}/util_build_embedded_as7.ps1release"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "build_vs2013_debug",
            "command": "${env:MSBUILD}",
            "args": [
                "azydev_embedded_vs2013.sln",
                "/property:Configuration=Debug",
                "/property:Platform=x64",
                "/property:GenerateFullPaths=true",
                "/t:build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build_vs2013_release",
            "command": "${env:MSBUILD}",
            "args": [
                "azydev_embedded_vs2013.sln",
                "/property:Configuration=Release",
                "/property:Platform=x64",
                "/property:GenerateFullPaths=true",
                "/t:build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean_vs2013",
            "command": "${env:MSBUILD}",
            "args": [
                "azydev_embedded_vs2013.sln",
                "/t:Clean"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        }
    ]
}